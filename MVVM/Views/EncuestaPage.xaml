<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BRMobile.Views.EncuestaPage"
             Title="Encuesta">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Encuesta.Tienda, StringFormat='Tienda: {0}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Encuesta.Fecha, StringFormat='Fecha: {0}'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Encuesta.Cumplimiento, StringFormat='Cumplimiento: {0}%'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>